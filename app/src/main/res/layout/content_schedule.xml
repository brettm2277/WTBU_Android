<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.globalappinitiative.wtbutest.Schedule">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/control_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6 AM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program1"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8 AM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program2"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 AM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program3"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program4"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program5"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program6"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program7"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program8"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 PM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program9"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12 AM"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/textView_program10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Program10"
                android:textSize="18sp"
                android:background="@drawable/actually_red_bubble"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/buttonPlay"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/play_button" />

            <ImageView
                android:id="@+id/buttonPause"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/pause_button"
                android:visibility="invisible"/>

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/buttonPlay"
                android:paddingLeft="20dp"
                android:paddingStart="20dp" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>



</RelativeLayout>
