<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:padding="8dp">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#555555"
        android:text="10pm"
        android:id="@+id/schedule_entry_hour"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grey_square"
        android:layout_toRightOf="@+id/schedule_entry_hour"
        android:layout_toEndOf="@+id/schedule_entry_hour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WTBU News"
            android:textSize="20dp"
            android:id="@+id/schedule_entry_text"
            android:textColor="#EEEEEE"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/schedule_entry_star"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="4dp"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/star_empty"
            android:id="@+id/schedule_entry_star"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>